<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Chama Yetu</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <%- include('../partials/header') %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-header bg-success text-white">
            <h3>Record Contribution Payment</h3>
          </div>
          <div class="card-body p-4">
            <% if (error) { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>

            <form method="POST" action="/contributions/record">
              <div class="mb-3">
                <label class="form-label">Select Member *</label>
                <select name="member_id" class="form-select" required>
                  <option value="">-- Choose Member --</option>
                  <% members.forEach(member => { %>
                    <option value="<%= member.id %>"><%= member.name %></option>
                  <% }); %>
                </select>
              </div>

              <div class="mb-3">
                <label class="form-label">Amount (KES) *</label>
                <input type="number" name="amount" class="form-control" min="1" required>
              </div>

              <div class="mb-3">
                <label class="form-label">Date *</label>
                <input type="date" name="date" class="form-control" value="<%= new Date().toISOString().split('T')[0] %>" required>
              </div>

              <button type="submit" class="btn btn-success">Record Payment</button>
              <a href="/contributions" class="btn btn-secondary">Cancel</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
