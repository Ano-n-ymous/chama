<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Chama Yetu</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <%- include('../partials/header') %>

  <div class="container mt-4">
    <h1 class="mb-4">Contributions & Arrears</h1>

    <!-- Arrears Alert Section -->
    <div class="card border-danger mb-4">
      <div class="card-header bg-danger text-white">
        <h5>⚠️ Members with Arrears (No payment in 30+ days)</h5>
      </div>
      <div class="card-body">
        <% if (arrears.length > 0) { %>
          <ul class="list-group">
            <% arrears.forEach(member => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong><%= member.name %></strong>
                <span class="badge bg-danger rounded-pill">
                  Last: <%= member.last_contribution || 'Never' %>
                </span>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="text-muted">✅ All members are up to date!</p>
        <% } %>
      </div>
    </div>

    <!-- All Contributions Table -->
    <div class="card">
      <div class="card-header bg-success text-white d-flex justify-content-between">
        <h5>All Contribution Records</h5>
        <a href="/contributions/record" class="btn btn-sm btn-light">+ Record Payment</a>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Date</th>
                <th>Member</th>
                <th>Amount (KES)</th>
              </tr>
            </thead>
            <tbody>
              <% contributions.forEach(contribution => { %>
                <tr>
                  <td><%= contribution.date %></td>
                  <td><%= contribution.member_name %></td>
                  <td><strong>KES <%= contribution.amount.toFixed(2) %></strong></td>
                </tr>
              <% }); %>
              <% if (contributions.length === 0) { %>
                <tr><td colspan="3" class="text-center">No contributions recorded yet.</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
