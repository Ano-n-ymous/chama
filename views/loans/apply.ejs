<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Chama Yetu</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <%- include('../partials/header') %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-header bg-primary text-white">
            <h3>Apply for Loan</h3>
          </div>
          <div class="card-body p-4">
            <% if (error) { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <% if (typeof success !== 'undefined') { %>
              <div class="alert alert-success"><%= success %></div>
            <% } %>

            <form method="POST" action="/loans/apply">
              <div class="mb-3">
                <label class="form-label">Loan Amount (KES) *</label>
                <input type="number" name="amount" class="form-control" min="100" max="50000" required>
                <small class="text-muted">Range: 100 - 50,000 KES</small>
              </div>

              <div class="mb-3">
                <label class="form-label">Purpose / Reason *</label>
                <textarea name="reason" class="form-control" rows="3" required></textarea>
              </div>

              <button type="submit" class="btn btn-primary">Submit Application</button>
              <a href="/" class="btn btn-secondary">Cancel</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
