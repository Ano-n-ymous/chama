<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Chama Yetu</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <%- include('../partials/header') %>

  <div class="container mt-4">
    <h1 class="mb-4">Pending Loan Applications</h1>

    <% if (loans.length === 0) { %>
      <div class="alert alert-info">No pending loan applications.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Date</th>
              <th>Member</th>
              <th>Amount (KES)</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% loans.forEach(loan => { %>
              <tr>
                <td><%= loan.applied_date %></td>
                <td><strong><%= loan.member_name %></strong></td>
                <td class="text-danger"><strong>KES <%= loan.amount.toFixed(2) %></strong></td>
                <td>
                  <form action="/loans/approve/<%= loan.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Approve loan?')">Approve</button>
                  </form>
                  <form action="/loans/reject/<%= loan.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Reject loan?')">Reject</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
